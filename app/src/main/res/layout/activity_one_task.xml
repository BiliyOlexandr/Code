<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.todolist.OneTaskActivity"
    >

  <EditText
      android:id="@+id/name_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="@string/intput_name"
      android:inputType="textPersonName"

      />
  <EditText
      android:id="@+id/discription_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="top"
      android:hint="@string/intput_discription"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
  <Button
      android:id="@+id/ok_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/ok"
      android:textColor="@android:color/holo_green_dark"
      android:visibility="visible"
      tools:text="@string/ok"
      android:layout_gravity="bottom"
      />

  <Button
      android:id="@+id/cencel_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/cencel"
      android:textColor="@android:color/holo_green_dark"
      android:visibility="visible"
      tools:text="@string/cencel"
      />
</LinearLayout>

</LinearLayout>
