<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.todolist.OneTaskActivity"
    >

  <EditText
      android:id="@+id/change_name_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentStart="true"
      android:ems="10"
      android:hint="Intput name"
      android:inputType="textPersonName"
      android:textAppearance="?android:textAppearanceListItem"
      />
  <EditText
      android:id="@+id/change_discription_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="top"
      android:layout_below="@id/change_name_text"
      android:hint="Intput discription"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_below="@+id/change_discription_text"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      >
    <Button
        android:id="@+id/change_ok_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="OK"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="visible"
        tools:text="OK"
        android:layout_gravity="bottom"
        />

    <Button
        android:id="@+id/change_cencel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CENCEL"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="visible"
        tools:text="CENCEL"
        />
  </LinearLayout>

</LinearLayout>
